<%= simple_form_for([:private, @project, page], html: {class: 'js-toast-form'}) do |f| %>
  <%= f.input :title %>
  <%= f.input :source, as: :markdown, hint: markdown_hint_link %>

  <%= f.button :submit, class: 'btn-light' %> <%= or_back_link %>
<% end %>

<%= render 'markdown_modal_window' %>

<script>
  $(document).on('turbolinks:load', function () {
    hotkeys.activate('form');
  });

  $(document).ready(function(){
    $('button').attr("tabindex", "-1");
    $('.tui-toolbar-icons').attr("tabindex", "-1");
  });
</script>
