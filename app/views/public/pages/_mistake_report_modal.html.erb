<div class="modal fade" id="mistake-report-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('.title') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: mistake_report_public_page_path, scope: :mistake, id: :mistake_report_form do |f| %>
          <%= f.text_area :correction, class: 'form-control', placeholder: t('.correction_text') %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('.close') %></button>
        <button type="button" class="btn btn-primary" id="mistake-report-modal-submit"><%= t('.submit') %></button>
      </div>
    </div>
  </div>
</div>
