<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <%= yield :analytics %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if signed_in? %>
    <div class="sign-area">
      <% if public_controller? && current_user_owns_project? %>
        <%= link_to t('views.back_to_edit'), private_project_page_url(@project, @page, host: private_domain) %>
      <% else %>
        <%= link_to_unless_current current_user.email, edit_user_registration_path %>
        (<%= link_to_unless_current t('views.projects'), private_projects_path %> |
        <%= link_to t('views.sidebar.sign_out'), destroy_user_session_path, method: :delete %>)
      <% end %>
    </div>
  <% end %>

  <div class="page">
    <div class="row gutters">
      <div class="col col-1"></div>
      <div class="col col-10">
        <h1><%= title %></h1>
        <% unless notice.blank? %>
          <div class="message" data-component="message">
            <%= notice %>
            <span class="close small"></span>
          </div>
        <% end %>
        <% unless alert.blank? %>
          <div class="message error" data-component="message">
            <%= alert %>
            <span class="close small"></span>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row gutters">
      <div class="col col-1"></div>
      <div class="col col-7">
        <%= yield %>
      </div>
      <div class="col col-3">
        <h1 class="h3 hide-sm">&nbsp;</h1>
        <div class="small">
          <%= yield :sidebar %>
        </div>
      </div>
    </div>
  </div>
</html>
